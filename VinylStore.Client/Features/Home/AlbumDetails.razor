<div class="drawer-wrapper @(_isOpen ? "slide" : "")">
    <div class="drawer-mask"></div>
    <div class="drawer">
        @if (_activateAlbum is not null) {
            <div class="drawer-content">
                <img src="@_activateAlbum.Image" />
                <div class="album-details">
                    <h3>@_activateAlbum.Name</h3>
                    <h6 class="mb-3" text-muted>
                        <span class="oi oi-map-marker"></span>
                        @_activateAlbum.AuthorName
                    </h6>
                    <div class="mt-4">
                        <span class="mr-5">
                            <span class="oi oi-clock mr-2"></span>
                            @_activateAlbum.TimeFormatted
                        </span>
                        <span>
                            <span class="oi oi-infinity mr-2"></span>
                            @_activateAlbum.Rating stars
                        </span>
                    </div>
                    <p class="mt-4">@_activateAlbum.Description</p>
                </div>
            </div>
            <div class="drawer-controls">
                <button class="btn btn-secondary"
                        @onclick="Close">
                    Close
                </button>
            </div>
        }
    </div>
</div>

@code {
    private bool _isOpen;
    private Album? _activateAlbum;

    [Parameter, EditorRequired]
    public Album? Album { get; set; }

    protected override void OnParametersSet()
    {
        if (Album != null) {
            _activateAlbum = Album;
            _isOpen = true;
        }
    }

    private void Close() {
        _activateAlbum = null;
        _isOpen = false;
    }
}

